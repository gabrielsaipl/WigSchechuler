@using static Calendar.Pages.CalendarView;

@if (!nextView)
{

    <div class="mother-of-all-divs @(hide ? "d-none" : "d-show")">
        <CalendarHeader CSSClass="calendar-header" NextButtonEvent="NextYear" PreviousButtonEvent="PreviousYear" DateValue="@Year">
            <CalendarButtons>
                <CalendarView Option="View.HorizontalFullYear" DisplayName="Horizontal Full Year Calendar" Event="CreateView"></CalendarView>
                <CalendarView Option="View.Month" DisplayName="Month Calendar" Event="CreateView"></CalendarView>
                <CalendarView Option="View.HorizontalMonth" DisplayName="Horizontal Month Calendar" Event="CreateView"></CalendarView>
            </CalendarButtons>
        </CalendarHeader>

        <CalendarBody Type="CalendarBody.calendar.HorizontalYear" EventData="Events" MonthsList="@monthsOfYear" CurrentMonthString="@thisMonth" YearString="@Year" ResourceData="ResourceData" CurrentMonthValue="_currentMonth" HorizontalYearDayClickMethod="DayClicked" EventClickMethod="EventDetails"></CalendarBody>

    </div>
}

@if (nextView)
{
    //prevent popups from appearing
    showPopup = false;
    showDetails = false;

    <HorizontalFullYearCalendar></HorizontalFullYearCalendar>
}

            @*can turn this into a component*@
@if (hide == true)
{
    if (calendarSelected == 3)
    {
        showPopup = false;
        showDetails = false;
        <HorizontalFullYearCalendar></HorizontalFullYearCalendar>
    }
    else if (calendarSelected == 4)
    {
        showPopup = false;
        showDetails = false;
        <MonthCalendar></MonthCalendar>
    }
    else if (calendarSelected == 1)
    {
        showPopup = false;
        showDetails = false;
       <HorizontalMonthCalendar></HorizontalMonthCalendar>
    }
}

<AddEventPopup ShowPopup="@showPopup" SelectedDay="@DaySelected" Resource="SelectedResource" OnEventAdded="HandleEventAdded" SelectedDate="DateSelected" />

<EventDetail Event="EventDetail" ShowDetails="@showDetails"></EventDetail>
