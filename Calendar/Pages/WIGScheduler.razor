@switch (CurrentView)
{
    case View.Month:
        <MonthCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick">
        </MonthCalendar>
        break;

    case View.HorizontalMonth:
        <HorizontalMonthCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick">

        </HorizontalMonthCalendar>

        break;
    case View.HorizontalYear:
        <HorizontalYearCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick"></HorizontalYearCalendar>

        break;
    case View.HorizontalFullYear:
        <HorizontalFullYearCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick"></HorizontalFullYearCalendar>

        break;
    case View.HorizontalWeekYear:
        <HorizontalWeekYearCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick"></HorizontalWeekYearCalendar>

        break;
    case null:
        <MonthCalendar Events="EventData" ResourceData="ResourceData" EventClick="eventclick"></MonthCalendar>

        break;
}
@code {

    public enum View
    {
        Month,
        HorizontalMonth,
        HorizontalYear,
        HorizontalFullYear,
        HorizontalWeekYear,
    }

    [Parameter]
    public RenderFragment ScheduleViews { get; set; }
    [Parameter]
    public List<Event> EventData { get; set; } = new List<Event>();
    [Parameter]
    public List<ResourceData> ResourceData { get; set; } = new List<ResourceData>();
    [Parameter]
    public View? CurrentView { get; set; }
    [Parameter]
    public Action<Event> EventAction { get; set; }

    //Methods

    private void eventclick(Event eve)
    {
        EventAction.Invoke(eve);
    }

}

